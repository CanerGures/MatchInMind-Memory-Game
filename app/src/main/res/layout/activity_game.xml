            app:cardElevation="8dp">

            <ImageButton
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/flag_tr"
                android:tag="flag_gm" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
